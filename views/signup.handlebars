<div class="text-center text-light">
    <p>
        <h1>Free to Sign Up!</h1>
    </p>
</div>

<div class="row">
    <div class="col-3 mx-auto">
        <form class="text-light bg-dark p-3" id="signup" name="signup" method="post" action="/signup">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input class="text form-control" name="email" type="email" />
            </div>
            <div class="form-group">

                <label for="firstname">Firstname</label>
                <input class="form-control" name="firstname" type="text" />
            </div>
            <div class="form-group">

                <label for="lastname">Lastname</label>
                <input class="form-control" name="lastname" type="text" />
            </div>
            <div class="form-group">

                <label for="password">Password</label>
                <input class="form-control" name="password" type="password" />
            </div>
            <input class="btn text-light bg-secondary" type="submit" value="Sign Up" />

        </form>
    </div>
</div>